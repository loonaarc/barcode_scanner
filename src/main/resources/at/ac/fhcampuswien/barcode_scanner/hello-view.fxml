<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/22.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="at.ac.fhcampuswien.barcode_scanner.UIController">
   <children>
      <HBox prefHeight="400.0" prefWidth="800.0" spacing="10">
        <children>
            <VBox alignment="CENTER" prefHeight="400.0" prefWidth="400.0">
               <children>
                  <VBox alignment="CENTER" prefHeight="300.0" prefWidth="400.0">
                     <children>
                      <!-- Video Feed ImageView -->
                      <ImageView fx:id="videoFeedView" fitHeight="240.0" fitWidth="320.0" pickOnBounds="true" preserveRatio="true" />
                     </children>
                  </VBox>
                  <VBox alignment="CENTER" prefHeight="100.0" prefWidth="400.0">
                     <children>
                     <Button fx:id="resumeButton" disable="true" onAction="#onResumeButtonClicked" text="Resume Scanning" />
                     </children>
                  </VBox>
               </children>
            </VBox>

                <!-- Product Image ImageView -->
          <VBox alignment="TOP_CENTER" prefHeight="400.0" prefWidth="400.0" spacing="10">
               <VBox alignment="CENTER" prefHeight="200.0" prefWidth="400.0">
                  <children>
                  <ImageView fx:id="productImageView" fitHeight="200.0" fitWidth="400.0" pickOnBounds="true" preserveRatio="true" />
                  </children>
               </VBox>
               <VBox prefHeight="200.0" prefWidth="400.0">
                  <children>
                  <Label fx:id="productInfoLabel" prefHeight="200.0" prefWidth="400.0" wrapText="true" />
                  </children>
               </VBox>

                </VBox>
        </children>
      </HBox>
      <HBox prefHeight="200.0" prefWidth="800.0" style="-fx-background-color: BLUE;">
         <children>
            <TextArea fx:id="logArea" prefHeight="200.0" prefWidth="800.0" />
         </children>
      </HBox>
   </children>
</VBox>
