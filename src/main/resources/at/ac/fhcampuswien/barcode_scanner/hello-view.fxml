<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Label?>
<HBox spacing="10" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="at.ac.fhcampuswien.barcode_scanner.HelloController">
  <children>
    <!-- Video Feed ImageView -->
    <ImageView fx:id="videoFeedView" fitHeight="480.0" fitWidth="640.0" pickOnBounds="true" preserveRatio="true" />

    <!-- Product Image ImageView -->
    <VBox alignment="TOP_CENTER" spacing="10">
      <ImageView fx:id="productImageView" fitHeight="200.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" />
      <Label fx:id="productInfoLabel" wrapText="true" maxWidth="200" />
    </VBox>
  </children>
</HBox>
